@model IEnumerable<MovieTicketingSystem.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.columns)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.columns)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-default">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-default">Details</a>
                <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-default">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
