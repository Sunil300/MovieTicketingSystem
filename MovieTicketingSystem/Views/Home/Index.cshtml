@model IEnumerable<MovieTicketingSystem.Models.Movie>
@{
    ViewData["Title"] = "Home Page";
}
    <div class="container" style="width:90%">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    @if (item.IsOnCarousel)
                    {
                        <li data-target="#myCarousel" data-slide-to="@item.MovieId"></li>
                    }
                }
            </ol>
            <div class="carousel-inner" role="listbox">
                @foreach (var item in Model)
                {
                    @if (item.IsOnCarousel)
                    {
                        <div class="item">
                            <img src="@item.Poster" alt="@item.Title" class="img-responsive" style="width:100%" />
                            <div class="carousel-caption" role="option">
                                <p>
                                    @item.Title
                                    <a class="btn btn-default" asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId">Details</a>
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row">
            <div class="col-md-2">
                <h3>LET US</h3>
                <a class="btn btn-primary btn-lg" href="/Movies" role="button"><b>BUY</b> TICKETS</a>
            </div>
            <div class="col-md-10">
                <h3><strong style="color:#f60">NOW</strong> SHOWING</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-2">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId">
                                <img src="@Html.DisplayFor(modelItem => item.Poster)" class="img-thumbnail" alt="@Html.DisplayFor(modelItem => item.Synopsis)">
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
<script>
    $(document).ready(function () {
        var $dom = $("li:first").addClass("active");
        var $dom = $(".item").first().addClass("active");
    });
</script>
